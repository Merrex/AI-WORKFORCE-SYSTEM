# Application Configuration
NODE_ENV=development
APP_NAME=AI Workforce Platform
APP_PORT=3000
API_PORT=5000

# Database Configuration
DATABASE_URL=postgresql://localhost:5432/ai_workforce
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Authentication & Security
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret-change-this
BCRYPT_ROUNDS=12

# LLM/LRM API Keys (User-provided)
# Users configure their own keys for AI providers
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
COHERE_API_KEY=
GOOGLE_AI_API_KEY=

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4
PLANNING_LLM_MODEL=gpt-4
VALIDATION_LLM_MODEL=gpt-3.5-turbo
EMBEDDING_MODEL=text-embedding-3-small

# Vector Database (for memory)
VECTOR_DB_URL=http://localhost:6333
VECTOR_DB_COLLECTION=ai_workforce_memory

# Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./storage
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@ai-workforce.local

# Monitoring & Observability (Optional)
SENTRY_DSN=
DATADOG_API_KEY=

# Feature Flags
ENABLE_SYNTHETIC_DATA=true
ENABLE_AUTO_ESCALATION=true
ENABLE_AGENT_TELEMETRY=true
